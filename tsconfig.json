{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "dist",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/__mocks__", "**/__tests__"]
}
